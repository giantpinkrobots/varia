{
	"app-id": "io.github.giantpinkrobots.varia",
	"runtime": "org.gnome.Platform",
	"runtime-version": "46",
	"sdk": "org.gnome.Sdk",
	"sdk-extensions": [
        	"org.freedesktop.Sdk.Extension.rust-stable"
    	],
	"command": "varia",
	"build-options" : {
		"append-path" : "/usr/lib/sdk/rust-stable/bin",
		"build-args" : [
		    "--share=network"
		]
	},
	"//": "Justifications for the permissions: This program utilizes aria2c, and aria2c requires the networking permission and the xdg-download directory in order to download files. It also has a 'shut down once all downloads are completed' feature that requires access to org.freedesktop.login1. org.kde.* is needed for the tray icon functionality.",
	"finish-args": [
		"--share=network",
		"--share=ipc",
		"--socket=fallback-x11",
		"--device=dri",
		"--socket=wayland",
		"--filesystem=xdg-download",
		"--system-talk-name=org.freedesktop.login1",
		"--own-name=org.kde.*"
	],
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/man",
		"/share/doc",
		"/share/gtk-doc",
		"/share/man",
		"/share/pkgconfig",
		"*.la",
		"*.a"
	],
	"modules": [
		"./python3-aria2p.json",
		"./python3-dbus-next.json",
		{
			"name": "aria2",
			"buildsystem": "autotools",
			"config-opts": [
				"--without-libxml2",
				"--without-sqlite3",
				"--without-appletls",
				"--without-gnutls",
				"--without-libgmp",
				"--without-libnettle",
				"--without-libgcrypt",
				"--without-libssh2",
				"--without-cppunit",
				"--without-libz",
				"--without-libcunit",
				"--without-libcares",
				"--without-libaria2",
				"--disable-nls",
				"--with-openssl",
				"--disable-ftp"
			],
			"sources": [
				{
					"type": "archive",
					"url": "https://github.com/aria2/aria2/releases/download/release-1.37.0/aria2-1.37.0.tar.xz",
					"sha256": "60a420ad7085eb616cb6e2bdf0a7206d68ff3d37fb5a956dc44242eb2f79b66b"
				}
			]
		},
		{
			"name": "varia",
			"builddir": true,
			"buildsystem": "meson",
			"sources": [
				{
					"type": "dir",
					"path": "."
				}
			]
		}
	]
}
